<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main  style="background-color: #ffffff">
  <div class="indexTopBar">
    <img src="img/ctelogo.png" alt="CTElogo" />
  </div>
  <h1 style="text-align: center">Edit Data</h1>
  <div class="box">
    <label class="selector">
      Select Course:
      <select id="coursePicker">
        <% for(let course of courses) { %>
        <option value="<%= course.name %>"><%= course.name %></option>
        <% } %>
        <option value="addCourse">Add Course</option>
      </select>
    </label>
  </div>
  <div class="box">
    <label class="selector">
      Course Name: <textarea id="namer" rows="1">Course Name</textarea>
    </label>

    <label class="selector">
      Number of Sections: <input id="sectionSelector" type="number" min="1" />
    </label>

    <div class="selector" id="coursePeriods">
      <label  style="color: #FFFFFF">Avaliable Periods:</label>
      <div class = "periodSelector">
      <% for(let i=1; i <= 8; i++) { %>
        <input type="checkbox" id="<%= 'Period ' + i %>" />
        <label  style="color: #FFFFFF" for="<%= 'Period ' + i %>">Period <%= i %></label>
      <% } %>
      </div>
    </div>

    <div class="selector">
      <label style="color: #FFFFFF">Compatible Classrooms:</label>
      <div class="scrollSelector">
        <% for(let classroom of classrooms) { %>
          <input type="checkbox" id="<%= 'C ' + classroom.roomNum %>" />
          <label style="color: #FFFFFF" for="<%= 'C ' + classroom.roomNum %>">Room <%= classroom.roomNum %></label>
          <br/>
        <% } %>
      </div>
    </div>

    <div class = "selector">
      <input type="checkbox" id="priorityOverrideEnabler" /><label style="color: #FFFFFF">Hard Coded Priority</label>

      <div id="sectionSelectorDiv" class="">
        <label class="selector">
        Overridden Priority: <input id="prioritySelector" type="number" min="0" max="1"/>
        </label>    
      </div>
    </div>
    <a role="button">Save</a>
  </div>
</main>
<!-- /Main Site -->

<script src="/js/coursesEdit.js"></script>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
