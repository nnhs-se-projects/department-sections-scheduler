<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main>
  <div class="indexTopBar">
    <img src="img/SE-GitHub-image.png" alt="Huskie code logo" />
    <h1>Data</h1>
  </div>
  <div class="box flexBox">

    <div class="box2 flexItem">
      <h1>Classrooms <%=myVar%></h1>
      Count: <p style="display:inline" id="classroomsCount"><%=classrooms.length%></p>
      <% classrooms.sort((a, b) => (a.roomNum > b.roomNum) ? 1 : -1) %>
      <div class="scrollSelector" style="max-height: 500px; min-height: 500px; border-radius: 10px 10px 0px 0px;">
      <% for(let i=0; i < classrooms.length; i++) { %>
        <button class="collapsible" id="viewClassrooms<%=i%>"><%= classrooms[i].roomNum %></button>
        <div class="contentCollapsible">
          <b>Periods Available:</b><%= classrooms[i].periodsAvailable.map((item) => (item = " "+item))%>
        </div>
      <% } %>
      </div>
      <textarea class="filter" id="classFilter" rows="1" placeholder="ðŸ”Žï¸Ž Search"></textarea>
      <div class="buttonHolder">
        <a href="/classroomsEdit" role="button" class="buttonBox" style="margin: 5px">Edit Classrooms</a>
      </div>
    </div>

    <div class="box2 flexItem">
      <h1>Courses</h1>
      <div class="scrollSelector" style="max-height: 500px; min-height: 500px; border-radius: 10px 10px 0px 0px;">
      <% for(let i=0; i < courses.length; i++) { %>
        <button class="collapsible"><%= courses[i].name %></button>
        <div class="contentCollapsible">
          <b>Sections:</b> <%= courses[i].sections %>
          <br/> <b>Compatible Classrooms:</b><%= courses[i].compatibleClassrooms.map((item) => (item = " "+item)) %>
          <br/> <b>Periods:</b><%= courses[i].compatiblePeriods.map((item) => (item = " "+item)) %>
          <% if(courses[i].userPriority !== undefined) { %>
            <br/> <b>Priority:</b> <%= courses[i].userPriority %>
          <% } %>
        </div>
      <% } %>
      </div>
      <textarea class="filter" id="courseFilter" rows="1" placeholder="ðŸ”Žï¸Ž Search"></textarea>
      <div class="buttonHolder">
        <a href="/coursesEdit" role="button" class="buttonBox" style="margin: 5px">Edit Courses</a>
      </div>
    </div>

    <div class="box2 flexItem">
      <h1>Teachers</h1>
      <div class="scrollSelector" style="max-height: 500px; min-height: 500px; border-radius: 10px 10px 0px 0px;">
      <% for(let i=0; i < teachers.length; i++) { %>
        <button class="collapsible"><%= teachers[i].name %></button>
        <div class="contentCollapsible">
          Hey Guys, teacher here
        </div>
      <% } %>
      </div>
      <textarea class="filter" id="teacherFilter" rows="1" placeholder="ðŸ”Žï¸Ž Search"></textarea>
      <div class="buttonHolder">
        <a href="/teachersEdit" role="button" class="buttonBox" style="margin: 5px">Edit Teachers</a>
      </div>
    </div>

  </div>
</main>
<!-- /Main Site -->

<script src="/js/dataView.js"></script>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
